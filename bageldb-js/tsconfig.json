{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "lib": [
      "ES2015",
      "DOM",
      "ESNext",
    ],
    "module": "esnext",
    "target": "ES5",
    "rootDir": "src",
    "skipLibCheck": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    // "outDir": "dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "downlevelIteration": true,
    // "importHelpers": true,
    "jsx": "react",
    "checkJs": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.cjs",
    // "webpack.config.ts",
    "tsconfig.json"
  ]
}