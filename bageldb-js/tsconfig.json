{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "rootDir": "src",
    "skipLibCheck": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "outDir": "types",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": false,
    "target": "es5",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "esnext",
    "jsx": "react",
    "checkJs": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.js",
    "webpack.config.js",
    "tsconfig.json"
  ]
}